rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper for admin - uses Firestore admins collection instead of hardcoded UID
    // This matches the pattern used in firestore.rules
    function isAdmin() {
      return request.auth != null 
        && firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid))
        && firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }

    // Public read, Admin write
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
